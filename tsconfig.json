{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "next-env.d.ts",
    "lib/types.d.ts",
    "lib/**/*.ts",
    "lib/**/*.tsx",
  ],
  "exclude": [
    "**/node_modules"
  ],
  "ts-node": {
    "files": true
  },
}